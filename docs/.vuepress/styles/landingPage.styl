.home
	margin-top 100vh !important

#lpCover
	position absolute
	top 0
	left 0
	right 0
	height 100vh
	overflow hidden

.coverBg

	position absolute
	top 0
	left 0

	background #0f1015
	background-image url('/img/cover-bg.jpg')
	background-size cover
	background-position center center

	display block
	box-sizing border-box
	min-width 100vw
	min-height 190vh

.coverMid

	position absolute
	top 0
	left 0

	background-image url('/img/cover-mid.png')
	background-size cover
	background-position left

	display block
	box-sizing border-box
	min-width 100vw
	min-height 100vh	

.coverTop

	position absolute
	top 5vh
	left 0

	background-image url('/img/cover-top.png')
	background-size cover
	background-position center

	display block
	box-sizing border-box
	min-width 100%
	min-height 100vh		
