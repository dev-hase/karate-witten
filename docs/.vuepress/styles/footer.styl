#lpFooter
	position fixed
	left 0
	right 0
	bottom 0
	height 100vh
	background #333
	z-index -3
	background url('/img/footer.jpg'), url('/img/footerTile.jpg')
	background-position bottom, top
	background-size 170vh, 60px
	background-repeat no-repeat, repeat


.linkList
	font-size 3.5rem
	font-family $fontB
	display flex
	flex-direction column
	height 80vh
	margin-top 20vh
	width 90vw
	align-items flex-end
	justify-content space-evenly
	text-shadow 5px 5px 3px #000

	a
		color #cfcfcf
	a:hover, a:focus
		color $accentColor



