@require(landingPage)
@require(navbarOverrides)

schatten()
	box-shadow 2px 4px 3px #eee !important

rundung()
	border-radius .125rem

.hideMe
	display none

body, .sidebar, .navbar
	background-image url('/img/paper.png') 

html, body

	font-family $fontA

	h1, h2, h3, h4, h5, h6
		//font-weight 800
		font-style regular
		font-family $fontB
		letter-spacing 1.5px
		color lighten($textColor, 15%)

	@media (max-width $MQMobile)
		font-size .9rem

.swal2-popup
	font-family $fontA

.googleMaps
	max-width 100% !important
	schatten()
	rundung()

iframe
	display flex
	min-width 100%
	max-width 100%
	width 100%
	min-height 200px

.header-anchor
	display none


.custom-block
	schatten()
	rundung()
	background-image url('/img/paper.png') 


	.custom-block-title
		font-weight bold
		//font-style italic
		font-family $fontB
		letter-spacing 1.5px
		font-size 1.25rem

.custom-block.danger
	background-color $danger
	padding 1rem 2.5rem
	color #eee
	border none
	.custom-block-title
		color #fff
		font-size 2rem
	@media (max-width $MQMobile)
		padding .5rem 1.25rem
	@media (min-width 1200px)
		padding 1rem 5rem

.custom-block.tip
	background-color $tip
	padding 1rem 2.5rem
	border none
	color lighten($textColor, 10%)
	.custom-block-title
		color lighten($textColor, 10%)
	@media (max-width $MQMobile)
		padding .5rem 1.25rem
	@media (min-width 1200px)
		padding 1rem 5rem		

.custom-block.warning
	background-color $warning
	padding 1rem 2.5rem
	border none
	color lighten($textColor, 10%)
	.custom-block-title
		color lighten($textColor, 10%)
	@media (max-width $MQMobile)
		padding .5rem 1.25rem
	@media (min-width 1200px)
		padding 1rem 5rem