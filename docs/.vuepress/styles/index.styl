 // spam potection

.hideMe
	display none

.imageRight
	float right
	box-sizing border-box
	max-width 30vw
	width 40%
	//border 1px solid #494949
	margin-left .5rem !important
	margin-bottom 1rem !important
	margin-top .25rem !important
	//border-radius .25rem
	@media (max-width $MQMobileNarrow)
		max-width 100%
		min-widht 100%
		width 80%
		margin-left 10% !important
		float unset



body, .sidebar, .navbar
	background-image url('/img/paper.png') 

html, body
	hyphens auto

	font-family $fontA

	h1, h2, h3, h4, h5, h6

		font-style regular
		font-family $fontB
		letter-spacing 1.5px
		color lighten($textColor, 15%)
		word-break break-word
		hyphens auto 

	@media (max-width $MQMobile)
		font-size .9rem

em
	position relative
	z-index 3
	display inline-block
	//background-color rgba(255, 248, 170, .75)
	//background-image url('/img/paper.png')
	padding .2rem .7rem
	@media (max-width $MQMobile)
		font-size .9rem

em:before
	content ""
	z-index -1
	left -.1rem
	top 0em
	border-width 2px
	border-style solid
	border-color $danger
	position absolute
	border-right-color transparent
	width 98%
	height 1em
	transform rotate(.2deg)
	//opacity 0.85
	border-radius 0.25em
	height 95%
	//background-color rgba(222,233,33,.2)

em:after

	content ""
	z-index -1
	left 0em
	top -.2rem
	border-width 2px
	border-style solid
	border-color $danger
	border-left-color transparent
	border-top-color transparent
	position absolute
	width 99%
	height 1em
	transform rotate(-.51deg)
	opacity 0.75
	border-radius 0.25em
	height 102%
	//background: linear-gradient(38deg, rgba(255,255,255,0) 43%, rgba(247,237,56,0.3) 100%);

.theme-default-content

	img
		border 4px solid #333
		umrandung()
		margin 1rem 0
		box-sizing border-box

	ul
		position relative
		margin .25rem 0
		color #eee
		padding .5rem 1.5rem
		margin .75rem 0
		list-style none
		border-radius .2rem
		@media (max-width $MQMobile)
			margin .75rem .5rem

		li
			position relative
			padding .35rem 0
			//border-right 1px solid #555
			margin-bottom 1rem
			color $textColor
			@media (max-width $MQMobile)
				font-size .9rem      

		li:before 
			content ''
			height 1.1rem
			width .9rem
			display block
			position absolute
			background-image url('/img/list.png')
			background-size cover
			background-position center
			transform translateY(-50%)
			filter invert(30%)
			left -1.75rem
			top 50%				  

.swal2-popup
	font-family $fontA

.googleMaps
	max-width 99% !important
	min-width 99% !important
	//border 2px solid #494949 !important
	filter saturate(.6) sepia(.45)
	border-radius .125rem
	@media (max-width $MQMobile)
		max-height 55vh

iframe
	display flex
	min-width 100%
	max-width 100%
	width 100%
	min-height 200px


.header-anchor
	display none


// custom blocks ----------------------------------

.custom-block
	position relative
	background-image url('/img/paper.png') 

	.custom-block-title
		display none

	&:after
		content ""
		clear both
		display table


.custom-block.danger
	position relative
	background-color $danger
	padding 1rem 2.5rem
	color #efefef
	umrandung()
	h1, h2, h3, h4, h5, h6
		color #efefef
	@media (max-width $MQMobile)
		padding .5rem .75rem
	@media (min-width 1200px)
		padding 1rem 4.5rem

